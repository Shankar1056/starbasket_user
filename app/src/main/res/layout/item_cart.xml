<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:paddingBottom="@dimen/narrow"
	android:paddingEnd="@dimen/standard"
	android:paddingStart="@dimen/standard"
	android:paddingTop="@dimen/narrow"
	tools:ignore="MissingPrefix">

	<ImageView
		android:id="@+id/iv_image"
		android:layout_width="100dp"
		android:layout_height="80dp"
		android:contentDescription="@string/content_description"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/standard"
		android:orientation="vertical">

		<TextView
			android:id="@+id/tv_title"
			fontPath="@string/font_medium"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="@dimen/narrow"
			android:textColor="@color/black"
			tools:text="Potato"/>

		<TextView
			android:id="@+id/tv_quantity"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="end"
			android:layout_marginEnd="@dimen/thin"
			android:layout_marginTop="@dimen/narrow"
			android:textColor="@color/grey_600"
			tools:text="1 kg"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/tv_dec_quantity"
				fontPath="@string/font_medium"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/circular_border_primary"
				android:gravity="center"
				android:padding="@dimen/thick"
				android:text="@string/minus"
				android:textColor="@color/colorPrimary"
				android:textSize="@dimen/text_medium"/>

			<TextView
				android:id="@+id/tv_size"
				fontPath="@string/font_medium"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="@dimen/narrow"
				android:textColor="@color/colorPrimary"
				android:textSize="@dimen/text_medium"
				tools:text="1"/>

			<TextView
				android:id="@+id/tv_inc_quantity"
				fontPath="@string/font_medium"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/circular_border_primary"
				android:gravity="center"
				android:padding="@dimen/thick"
				android:text="@string/plus"
				android:textColor="@color/colorPrimary"
				android:textSize="@dimen/text_medium"/>

			<TextView
				android:id="@+id/tv_price"
				fontPath="@string/font_medium"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="end"
				android:textSize="@dimen/text_big"
				tools:text="\u20B9 35"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>