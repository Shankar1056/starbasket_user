<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context="com.threembed.spotasap_pojos.Notificationaleret">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/notificationlist"
        android:dividerHeight="3dp"
        android:divider="@color/gray"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        >
    </ListView>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/blancscreennotification"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/notificationicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/notification_blank_bell_icon"/>
            <com.utility.CustomTextView
                android:id="@+id/text1"
                android:textColor="@color/catagories"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/notificationicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nonotification"
                android:textSize="28sp"
                />
            <com.utility.CustomTextView
                android:id="@+id/text2"
                android:textColor="@color/catagories"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notificationtext1"
                android:textSize="17sp"
                />
            <com.utility.CustomTextView
            android:id="@+id/text3"
                android:textColor="@color/catagories"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notificationtext2"
            android:textSize="17sp"
            />


        </RelativeLayout>
</FrameLayout>
