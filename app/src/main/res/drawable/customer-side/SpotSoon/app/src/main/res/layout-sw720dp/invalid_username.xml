<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF8A80">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sadface"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#FFFFFF">

            <com.utility.CustomTextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Please enter a valid User ID and try again!"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_14_t0_16"
                android:padding="@dimen/padding_10_t0_13"/>
            <com.utility.CustomTextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:gravity="left"
                android:paddingLeft="@dimen/padding_10_t0_13"
                android:paddingRight="@dimen/padding_10_t0_13"
                android:text="It seems like you have entered an invalid User ID. Kindly note that the Account ID is case sensitive and should match with active ID"
                android:textColor="@color/product_name"
                android:textSize="@dimen/textsize_12_to_14"/>

            <com.utility.CustomTextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv2"
                android:gravity="left"
                android:text="Please contact your local operator in case you have forgotten your ID"
                android:textColor="@color/product_name"
                android:textSize="@dimen/textsize_12_to_14"
                android:padding="@dimen/padding_10_t0_13"/>

            <com.utility.CustomTextView
                android:id="@+id/tv_gotid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv3"
                android:gravity="right"
                android:text="GOT IT"
                android:textColor="@color/app_blue"
                android:textSize="@dimen/textsize_16_t0_18"
                android:padding="@dimen/padding_10_t0_13"
                android:layout_marginRight="@dimen/margin_10_t0_13"/>
        </RelativeLayout>
    </LinearLayout>