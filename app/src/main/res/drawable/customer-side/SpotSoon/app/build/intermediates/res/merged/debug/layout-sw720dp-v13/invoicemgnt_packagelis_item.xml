<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
  >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_10_t0_13"
        android:layout_marginRight="@dimen/margin_10_t0_13">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/margin_10_t0_13"
    android:layout_marginBottom="@dimen/margin_10_t0_13"
        android:layout_marginLeft="@dimen/margin_4_to_6"
        android:layout_marginRight="@dimen/margin_4_to_6" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_4_to_6">

            <TextView
                android:id="@+id/packageName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Package Name"
                android:textSize="@dimen/textsize_18_t0_20"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#050505"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/dueDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Due Date : 11-04-2017"
                android:textSize="@dimen/textsize_15_t0_17"
                android:layout_marginTop="@dimen/margin_10_t0_13"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:gravity="right|center">
            <com.utility.CustomTextView
                android:id="@+id/view_plans"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/app_blue"
                android:background="@drawable/blue_border"
                android:padding="@dimen/padding_8_to_10"
                android:gravity="center"
                android:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#CCCCCC"
        android:layout_marginTop="@dimen/margin_5_to_8"/>
    </LinearLayout>
</LinearLayout>